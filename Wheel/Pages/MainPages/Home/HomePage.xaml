             x:Class="Wheel.Pages.MainPages.Home.HomePage"
             Title="HomePage"
             xmlns:local="clr-namespace:Wheel.Pages.MainPages">
    <VerticalStackLayout>
        <HorizontalStackLayout>
                <local:WheelIcon/>
                <Label
            Text="Donate!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
