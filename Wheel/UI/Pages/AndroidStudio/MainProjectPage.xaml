<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Wheel.UI.Pages.AndroidStudio.MainProjectPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Wheel.UI.Views"
    Title="MainProjectPage">
    <ScrollView>
        <VerticalStackLayout>
            <Label
                x:Name="ProjectName"
                FontSize="Large"
                HorizontalOptions="Start"
                Text="Current Project: Unknown"
                VerticalOptions="Center" />

            <Label Text="Upload a local Android Studio project to get started" />
            <local:LoadFolderView
                x:Name="UploadProjectXml"
                HeightRequest="50"
                HorizontalOptions="Start"
                WidthRequest="200" />

            <VerticalStackLayout x:Name="EntriesStackLayout" Margin="10" />


        </VerticalStackLayout>

    </ScrollView>
</ContentPage>