<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wheel.UI.Pages.AndroidStudio.ServicesPage"
             Title="ServicesPage">
    <Grid>
        <Label
            x:Name="LoadProjectFirst"
            FontSize="Large"
            HorizontalOptions="Center"
            Text="Please load your Android Studio project (in the `Project` tab)"
            VerticalOptions="Center" />

        <ScrollView>
            <Grid x:Name="EntriesGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>