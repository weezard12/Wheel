<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Wheel.UI.Views.MyProgressView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <HorizontalStackLayout
        Spacing="10"
        VerticalOptions="Center"
        Padding="10">
        <ProgressBar
            x:Name="ProgressBarXml"
            HeightRequest="20"
            WidthRequest="200" />
        <Label 
            x:Name="ProgressBarTextXml"
            VerticalOptions="Center"
            FontSize="14" />
    </HorizontalStackLayout>
</ContentView>
