<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Wheel.UI.WheelIcon"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Wheel"
    xmlns:namespace="clr-namespace:Wheel">
    <Grid>

        <Image
            HeightRequest="100"
            Source="back_circle.png"
            WidthRequest="100">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnImageTapped" />
            </Image.GestureRecognizers>
        </Image>
        <Image
            x:Name="BackCogImage"
            HeightRequest="100"
            Source="back_cog.png"
            WidthRequest="100">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnImageTapped" />
            </Image.GestureRecognizers>
        </Image>
        <Image
            x:Name="CogImage"
            HeightRequest="100"
            Source="cog.png"
            WidthRequest="100">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnImageTapped" />
            </Image.GestureRecognizers>
        </Image>
        <Image
            HeightRequest="100"
            Source="w.png"
            WidthRequest="100">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnImageTapped" />
            </Image.GestureRecognizers>
        </Image>
    </Grid>

</ContentView>
