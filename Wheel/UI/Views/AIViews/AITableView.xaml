<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Wheel.UI.AITableView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout>
        <Button
            x:Name="ToggleTableViewButton"
            Clicked="ToggleTableViewClicked"
            HorizontalOptions="Start"
            Text="Toggle Table View"
            VerticalOptions="Start" />

        <TableView
            x:Name="Table"
            Margin="10"
            HorizontalOptions="Start"
            Intent="Form"
            Scale="1"
            VerticalOptions="Start">
            <TableRoot x:Name="Root" />
        </TableView>
    </VerticalStackLayout>

</ContentView>
